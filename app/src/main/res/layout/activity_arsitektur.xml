<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFFFFF"
    tools:context=".ArsitekturActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Judul -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Arsitektur Model"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#1E88E5"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp" />

        <!-- Penjelasan -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Model yang digunakan dalam aplikasi ini merupakan jaringan saraf tiruan (Artificial Neural Network) dengan arsitektur sebagai berikut:\n\n• Input Layer: 5 Neuron (berisi data pengguna seperti jam kerja, gangguan, dll)\n• Hidden Layer 1: 16 Neuron dengan aktivasi ReLU\n• Hidden Layer 2: 8 Neuron dengan aktivasi ReLU\n• Output Layer: 1 Neuron dengan aktivasi sigmoid\n\nModel ini dikonversi ke format TensorFlow Lite agar dapat dijalankan di perangkat Android secara lokal tanpa internet."
            android:textSize="16sp"
            android:textColor="#333333"
            android:lineSpacingExtra="8dp" />

        <!-- Ilustrasi Arsitektur (opsional) -->
        <ImageView
            android:id="@+id/imgModelStructure"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/ic_model_diagram"
            android:scaleType="fitCenter"
            android:contentDescription="Diagram Arsitektur Model" />

    </LinearLayout>
</ScrollView>
